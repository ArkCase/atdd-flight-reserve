{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@helpers/*": [
                "helpers/*"
            ],
            "@fixtures/*": [
                "fixtures/*"
            ],
            "@pages/*": [
                "pages/*"
            ]
        },
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "tests/**/*",
        "helpers/**/*",
        "fixtures/**/*",
        "pages/**/*",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test-results",
        "playwright-report"
    ]
}